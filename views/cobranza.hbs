
    <nav class="navegacion">
        <div>
           <a href="/vistas/volver"><i class="bi bi-box-arrow-left"></i></a> 
        </div>
        <div>
           <span>Cobranza</span>
        </div>
        <div class="iconMenuHamburguesa">
           <i class="bi bi-filter-square"></i>
        </div>
    </nav>

    <div class="contPres">
       <div class="divFilterPres" style="height: auto; padding: 1.5em;">
        <h3>Ordenar Por:</h>
        <a href="/cobranza/pagoListDiario/{{coRu}}" class="btnOptionCob">Pagos Totales</a>
        <a href="/cobranza/filterSem/{{coRu}}" class="btnOptionCob">Semanales Por Cobrar Hoy</a>
        <a href="/cobranza/filterPosicion/{{coRu}}" class="btnOptionCob">Posicion</a>
      </div>
      
        {{#each prestamos}}
        <form action="/cobranza/savePago" method="post"> 

        <table class="tablePres">
            <tr>
                <th colspan="3" class="thTitleTablePres"> {{nombre}}</th>
            </tr>
             <tr>
                <th colspan="3" class="thTable">Direccion: {{direccion}}</th>
            </tr>
               <tr>
                <th colspan="3" class="thTable">Descripción: {{detalle}}</th>
            </tr>
             
              <tr>
                <th class="thTable">Monto: ${{monto}}</th>
                 <th class="thTable">Cuotas: {{cuotas}}</th>
                  <th class="thTable">Cuota: ${{cuota}}</th>
            </tr>
            <tr>
                 <th class="thTable" colspan="2">Utimo Pago: {{fechaUltPago}}</th>
                  <th class="thTable">Saldo: ${{mTotal}}</th>
            </tr>
             <tr>
                <th class="thTable">Fecha: {{fechaInicio}}</th>
                 <th class="thTable">Vto: {{fechaFinal}}</th>
                  <th class="thTable">Dia cobro: {{diaDeCobro}}</th>
            </tr>
               <tr>
                <th colspan="3" style="color: rgb(255, 145, 0);" class="thTable">Nota: {{notaCobrador}}</th>
            </tr>
              <tr>
                <th colspan="2" class="thTable">Cod: <input type="text" style="width: 80%; border: none;" readonly id="codPres" name="codPres" value="{{_id}}"></th>
                <th style="color: rgb(0, 184, 15);" class="thTable">Adelanto:  <span style="color:rgb(0, 158, 29)">{{adelanto}}</span></th>
            </tr>
            <tr>
             <th colspan="3">Pago:  <input type="number" step=".01" class="inpPres" id="pago" name="pago" required></th> 
                   
           </tr>
         
             <tr>
             <th colspan="3" style="background-color: greenyellow;">Transf: <input style="width: 25%;" type="number" step=".01" class="inpPres" id="transfMonto" name="transfMonto"> <input style="width: 58%; font-size: 18px;" class="inpPres" type="datetime-local" name="transfFecha" id="transfFecha"> </th> 
                   
           </tr>
            <tr class="trTablePres">
              
                 <th colspan="3" class="trTablePres">
                    <button type="submit" class="btnPagoCobra" style="background-color: blue; border: none; color:white"><i class="bi bi-check-lg"></i></button>
                    <a href="https://wa.me/549{{celular}}?text=¡Pulsa el link para ver tu estado de cuenta! https://proyectofinal-production-a7fb.up.railway.app/cobranza/ticket/{{_id}}" class="btnPagoCobra" style="background-color: rgb(3, 123, 123);"><i class="bi bi-ticket-perforated"></i></a>
                    <a href="https://wa.me/549{{celular}}" class="btnPagoCobra" style="background-color: green;"><i class="bi bi-whatsapp"></i></a>
                    <a href="/cobranza/pagosList/{{_id}}" class="btnPagoCobra" style="background-color: orangered;"><i class="bi bi-card-list"></i></i></a>
                      <a href="/cobranza/note/{{_id}}" class="btnPagoCobra" style="background-color: rgb(148, 0, 116);"><i class="bi bi-journal-bookmark"></i></a>
                      <a href="{{geolocalizacion}}" class="btnPagoCobra" style="background-color: rgb(217, 200, 9);"><i class="bi bi-pin-map"></i></a>
                     <a href="/cobranza/posicionNumber/{{_id}}" class="btnPagoCobra" style="background-color: rgb(9, 172, 217);"><i class="bi bi-arrow-down-up"></i> {{posicion}}</a>
                </th>
            </tr>
        </table>
        </form>
        {{/each}}
        <br>
        <div class="divFilterPres" style="height: auto; padding: 1.5em;">
        <h3>Ordenar Por:</h>
        <a href="/cobranza/pagoListDiario/{{coRu}}" class="btnOptionCob">Pagos Totales</a>
        <a href="/cobranza/filterSem/{{coRu}}" class="btnOptionCob">Semanales Por Cobrar Hoy</a>
        <a href="/cobranza/filterPosicion/{{coRu}}" class="btnOptionCob">Posicion</a>
      </div>
     
    </div>

    <footer class="footerCobranza">
            <div class="divFooter">
                <spam>Cobrado= {{monCobrado}}</spam>
                <spam>Esperado= {{espeValor}}</spam>
            </div>
    
            <div class="divFooter">
              <spam>Cant De Prestamos: {{nPres}}</spam>
              <spam>Efectividad= {{efect}}%</spam>
            </div>
    </footer>
